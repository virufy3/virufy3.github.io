{
  "private": "true",
  "scripts": {
    "dev": "gatsby develop",
    "start": "gatsby serve",
    "build": "gatsby build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-intl": "gatsby clean && node ./scripts/build-intl-resources.js",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.jsx ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virufy3/virufy3.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/virufy3/virufy3.github.io/issues"
  },
  "homepage": "https://github.com/virufy3/virufy3.github.io#readme",
  "dependencies": {
    "@reach/router": "^1.3.4",
    "autoprefixer": "^10.1.0",
    "gatsby": "^2.29.1",
    "gatsby-background-image": "^1.3.1",
    "gatsby-image": "^2.8.0",
    "gatsby-plugin-breakpoints": "^1.3.2",
    "gatsby-plugin-intl": "^0.3.3",
    "gatsby-plugin-postcss": "^3.4.0",
    "gatsby-plugin-react-helmet": "^3.7.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.11.1",
    "gatsby-source-filesystem": "^2.8.0",
    "gatsby-transformer-remark": "^2.16.1",
    "gatsby-transformer-sharp": "^2.9.0",
    "intersection-observer": "^0.12.0",
    "postcss": "^8.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "plugins": [
      "react",
      "react-hooks",
      "import",
      "node",
      "promise"
    ],
    "extends": [
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react",
      "prettier/standard",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "plugin:react-hooks/recommended"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    },
    "rules": {
      "node/no-unsupported-features/es-syntax": "off",
      "node/no-missing-import": "off"
    }
  },
  "eslintIgnore": [
    "public/",
    "static/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix",
    "*.{js,jsx,css,md,json}": "prettier --write"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
